<mvc:View xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m" 
          xmlns:f="sap.ui.layout.form"
          xmlns:t="sap.ui.table"
          xmlns:core="sap.ui.core"
          controllerName="mickey.controller.Main">


<!-- <Input id="idInp"></Input>
<Button id="idbtn" text="Click Me" press="onPress"></Button> -->

<t:Table id="" rows="{/empTab}" visibleRowCount="4" selectionMode="Single" rowSelectionChange="onSelect">
    <t:columns>
        <t:Column label="Emp ID">
            <t:template>
                <Text text="{empId}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <t:label>
                <Text text="Emp Name"/>
            </t:label>
            <t:template>
                <Input value="{empName}"/>
            </t:template>
        </t:Column>
        <t:Column label="Salary">
            <t:template>
                <Text text="{salary} {currency}"/>
            </t:template>
        </t:Column>
        <t:Column label="M Status">
            <t:template>
                <Select selectedKey="{mStat}">
                    <items>
                        <core:Item text="Married" key="M"/>
                        <core:Item text="Single" key="S"/>
                    </items>
                </Select>
            </t:template>
        </t:Column>
        <t:Column label="Smoker">
            <t:template>
               <CheckBox selected="{smoker}"/>
            </t:template>
        </t:Column>
        <t:Column label="Gender">
            <t:template>
                <Image src="{gender}" width="30px" height="30px"/>
            </t:template>
        </t:Column>
        <t:Column label="Rating">
            <t:template>
                <RatingIndicator value="{rating}"></RatingIndicator>
            </t:template>
        </t:Column>
    </t:columns>
</t:Table>

<f:SimpleForm id="idSimple">
    <f:content>
        <Label text="EmpID" ></Label>
        <Input id="idEmpId" width="20%" value="{empId}"></Input>
        <Label text="Emp Name" ></Label>
        <Input id="idEmpName" width="40%" value="{path: 'empName'}"></Input>
        <Label text="Salary" ></Label>
        <Input id="idSal" width="30%" value="{= ${empName} === 'Anubhav' ? 20000 : ${salary}}"></Input>
        <Label text="Currency" ></Label>
        <Input id="idCurr" width="30%" value="{currency}"></Input>
        <Label/>
        <Button text="Flip Flop" press="onFlip" width="30%"></Button>
    </f:content>
</f:SimpleForm>
<!-- <Button text="Default" press="onDefault"/> -->
</mvc:View>
